<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.JiajiaoxinxiDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.JiajiaoxinxiEntity" id="jiajiaoxinxiMap">
        <result property="kechengmingcheng" column="kechengmingcheng"/>
        <result property="fengmian" column="fengmian"/>
        <result property="xuekefenlei" column="xuekefenlei"/>
        <result property="jiaoshounianji" column="jiaoshounianji"/>
        <result property="xiaoshijiage" column="xiaoshijiage"/>
        <result property="keyueshijian" column="keyueshijian"/>
        <result property="jiajiaozhanghao" column="jiajiaozhanghao"/>
        <result property="jiajiaoxingming" column="jiajiaoxingming"/>
        <result property="clicktime" column="clicktime"/>
        <result property="discussnum" column="discussnum"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.JiajiaoxinxiVO" >
		SELECT * FROM jiajiaoxinxi  jiajiaoxinxi         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.JiajiaoxinxiVO" >
		SELECT  jiajiaoxinxi.* FROM jiajiaoxinxi  jiajiaoxinxi 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.JiajiaoxinxiView" >

		SELECT  jiajiaoxinxi.* FROM jiajiaoxinxi  jiajiaoxinxi 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.JiajiaoxinxiView" >
		SELECT * FROM jiajiaoxinxi  jiajiaoxinxi <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM jiajiaoxinxi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM jiajiaoxinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM jiajiaoxinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM jiajiaoxinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM jiajiaoxinxi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>




</mapper>
